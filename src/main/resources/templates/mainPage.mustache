<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style>
        body {
            background-image: linear-gradient(to bottom, rgba(69, 153, 237, 0.5), rgba(9, 109, 217, 0.5));
            font-family: Arial, sans-serif;
        }

        .create-user-button {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        .create-user-container {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            max-width: 400px;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: center;
            z-index: 9999;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .container {
            display: flex;
        }

        .module-table {
            flex-grow: 1;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-right: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .user-list {
            flex-grow: 1;
        }

        .user-container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .user-container .user {
            margin-top: 10px;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 10px;
            border-radius: 4px;
        }

        .user-container .user span {
            margin-left: 10px;
        }
    </style>
    <script>
        function toggleCreateUser() {
            var createUserButton = document.getElementById("createUserButton");
            var createUserContainer = document.getElementById("createUserContainer");

            if (createUserContainer.style.display === "" || createUserContainer.style.display === "none") {
                createUserContainer.style.display = "block";
                createUserButton.innerText = "Cancel";
            } else {
                createUserContainer.style.display = "none";
                createUserButton.innerText = "Create User";
            }
        }
    </script>
</head>
<body>
<button id="createUserButton" class="create-user-button" onclick="toggleCreateUser()">Create User</button>
<div id="createUserContainer" class="create-user-container">
    <form method="post" action="/">
        <input type="text" name="login" placeholder="Username">
        <input type="password" name="password" placeholder="Password">
        <input type="text" name="access" placeholder="Access level">
        <button type="submit">Create user</button>
    </form>
</div>
<div class="container">
    <div class="module-table">
        <table>
            <tr>
                <th>ID</th>
                <th>Module Name</th>
                <th>Min Version</th>
                <th>Actual Version</th>
            </tr>
            {{#ModuleEntity}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{module_name}}</td>
                    <td>{{min_version}}</td>
                    <td>{{actual_version}}</td>
                </tr>
            {{/ModuleEntity}}
        </table>
    </div>
    <div class="user-list">
        <div class="user-container">
            <div class="List-of-users">List of users</div>
            {{#Users}}
                <div class="user">
                    <b>{{id}}</b>
                    <span>{{login}}</span>
                    <i>{{password}}</i>
                    <i>{{access}}</i>
                </div>
            {{/Users}}
        </div>
    </div>
</div>
</body>
</html>
